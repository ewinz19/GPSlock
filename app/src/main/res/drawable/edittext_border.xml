<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Bayangan bawah (shadow efek 3D) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#D0D0D0"/> <!-- Warna shadow -->
            <corners android:radius="4dp"/>
        </shape>
    </item>

    <!-- Latar depan (bingkai) -->
    <item android:top="2dp" android:left="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Warna isi -->
            <stroke
                android:width="1dp"
                android:color="@color/hijau"/> <!-- Warna border -->
            <corners android:radius="4dp"/>
        </shape>
    </item>
</layer-list>
