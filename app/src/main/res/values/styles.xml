<resources>
      <style name="Theme.GPSLockPro" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here -->
    <item name="android:textColorPrimary">@color/blue</item> <!-- Warna biru -->
    <item name="android:textAlignment">center</item> <!-- Posisi tengah -->
    <item name="actionBarStyle">@style/CustomActionBar</item>
</style>

<style name="CustomActionBar" parent="Widget.AppCompat.ActionBar">
    <item name="background">@color/gray</item> <!-- Latar belakang abu-abu -->
    <item name="titleTextStyle">@style/CustomTitleTextStyle</item>
</style>

<style name="CustomTitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
    <item name="android:textColor">@color/blue</item> <!-- Warna biru -->
    <item name="android:textAlignment">center</item> <!-- Posisi tengah -->

    </style>
</resources>


